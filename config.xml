<?xml version='1.0' encoding='utf-8'?>
<widget id="com.GuiGhostGames.StarMatch2048" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>StarMatch 2048</name>
    <description>
        Swipe up down left or right to merge the stars. Can you get to the elusive Rainbow star?
    </description>
     <author email="info@guighost.com" href="http://guighostgames.com">
		GuiGhost Games
    </author>



    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <content src="index.html" />
    <access origin="*" />
	 <feature name="http://api.phonegap.com/1.0/device" />
    <preference name="orientation"     value="portrait" />        <!-- all: default means both landscape and portrait are enabled -->
    <preference name="target-device"   value="universal" />      <!-- all: possible values handset, tablet, or universal -->
      <preference name="DisallowOverscroll" value="true"/>
	<platform name="android">
        <allow-intent href="market:*" />
		<icon src="icon.png" />
        <preference name="android-targetSdkVersion" value="29" />
        <preference name="ANDROID_SUPPORT_RECYCLERVIEW_VERSION" default="27+" />
        <preference name="KeepRunning" value="true"/>
        <preference name="InAppBrowserStorageEnabled" value="true"/>
        <preference name="AndroidLaunchMode" value="singleTop"/>
        <preference name="DefaultVolumeStream" value="call" />
        <preference name="useCleartextTraffic" value="true" />
        <allow-navigation href="*" />
    </platform>
	
		<plugin name="enhance-cordova-connector"/>
		<plugin name="cordova-plugin-inappbrowser" spec="~3.2.0" />
</widget>
